{
	"name": "boilerplate",
	"version": "1.0.0",
	"description": "",
	"repository": {},
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf ./public/*.html && rm -rf ./public/scripts/*.js && rm -rf ./public/styles/*.css",
		"burn": "yarn clean && rm -rf ./node_modules",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"stylus": "stylus -m src/styles --out public/styles",
		"watch:stylus": "stylus -m -w src/styles --out public/styles",
		"build:stylus": "stylus -c src/styles/main.styl -o public/styles/main.css",
		"pug": "pug -P src --out public",
		"watch:pug": "pug -P -w src --out public",
		"build:pug": "pug src --out public",
		"watch:js": "webpack-dev-server --mode development",
		"build:js": "webpack --mode production",
		"dev": "yarn stylus && yarn pug && concurrently \"npm:watch:*\"",
		"build": "yarn clean && yarn pug-build && yarn stylus-build && yarn js-build"
	},
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@babel/preset-env": "^7.6.2",
		"@workwithizzi/eslint-config": "^0.0.4",
		"babel-loader": "^8.0.6",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"concurrently": "^4.1.2",
		"eslint": "^6.5.1",
		"eslint-loader": "^3.0.2",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"pug-cli2": "^1.0.0-alpha6.1",
		"stylus": "^0.54.7",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9",
		"webpack-dev-server": "^3.8.2"
	}
}
